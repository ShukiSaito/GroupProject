@page
@model GroupProject.Pages.ForwardModel
@{
    ViewData["Title"] = "Home page";

    var playerInfos = (QuickType.PlayerInfo[])ViewData["PlayerInfo"];
    var playerPositions = (QuickTypePosition.PlayerPosition[])ViewData["PlayerPosition"];
}

@*<div class="text-center">
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>*@

<head>
    <style>
        table, th, td {
            border: 1px solid black;
        }

        div {
            background-color: aqua;
        }
    </style>
</head>

<br />
<p />
<form>
    <div class="form-row">
        <div class="col">
            <input type="text" class="form-control" placeholder="First Name" asp-for="SearchString">

        </div>

        <div class="col">
            <input type="text" class="form-control" placeholder="Team" asp-for="TeamString">

        </div>
        <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </div>
</form>

<div class="text-center">
    <hi class="display-4"> Forward Players Info</hi>
    <hr />
    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Player Name</th>
                <th>Team Name</th>
                <th>Goals</th>
                <th>Assists</th>
                <th>Shots On Goal</th>
                <th>Crosses</th>
                <th>Games</th>
                <th>Fantasy Points</th>
            </tr>
        </thead>
        @{

            foreach (var playerInfo in playerInfos)
            // if(playerInfo.PlayerId != null)
            {


                foreach (var x in playerPositions)

                {
                    if (playerInfo.PlayerId == x.PlayerId && x.Position == "A")
                    {
                        <tr>
                            <td>@x.FirstName @x.LastName</td>
                            <td>@playerInfo.Team</td>

                            <td>@playerInfo.Goals</td>
                            <td>@playerInfo.Assists</td>
                            <td>@playerInfo.ShotsOnGoal</td>
                            <td>@playerInfo.Crosses</td>

                            <td>@playerInfo.Games</td>
                            <td>@playerInfo.FantasyPoints</td>


                        </tr>
                    }
                }

            }
        }
    </table>
</div>