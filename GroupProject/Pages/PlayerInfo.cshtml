@page
@model GroupProject.Pages.PlayerInfoModel
@{
    ViewData["Title"] = "Home page";
    var playerPositions = (QuickTypePosition.PlayerPosition[])ViewData["PlayerPosition"];
    var playerall = (QuickTypePlayerStats.PlayerStats[])ViewData["PlayerStats"];

}

@*<div class="text-center">
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>*@

<br/>
<p/>
<form>
    <div class="form-row">
        <div class="col">
            <input type="text" class="form-control" placeholder="Name" asp-for="SearchString">

        </div>
        <div class="col">
            <input type="text" class="form-control" placeholder="Nationality" asp-for="NationalityString">

        </div>
        <div class="col">
            <input type="text" class="form-control" placeholder="Team" asp-for="TeamString">

        </div>
        <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </div>
</form>

<head>
    <style>
        table, th, td {
            border: 1px solid black;
        }

        div {
            background-color: lightgreen;
        }
    </style>
</head>


<div class="text-center">
    <hi class="display-4"> Player Info</hi>
    <hr />
    <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Player Name</th>
                <th>Team Name</th>
                <th>Date of Joining Team</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Nationality</th>

                <th>Position</th>

            </tr>
        </thead>
        @{

            foreach (var playerInfo in playerPositions)
            // if(playerInfo.PlayerId != null)
            {
                var today = DateTime.Today.Year;
                var dob = today - playerInfo.BirthDate.Year;

                foreach (var x in playerall)
                {
                    var startdate = x.StartDate.ToShortDateString();
                    if (playerInfo.PlayerId == x.PlayerId)
                    {
                        <tr>
                            <td>@x.PlayerName</td>
                            <td>@x.TeamName</td>
                            <td>@startdate</td>
                            <td>@dob</td>
                            <td>@playerInfo.Gender</td>
                            <td>@playerInfo.Height</td>
                            <td>@playerInfo.Weight</td>
                            <td>@playerInfo.Nationality</td>

                            <td>@playerInfo.Position</td>


                        </tr>
                    }
                }

            }
        }
    </table>
</div>