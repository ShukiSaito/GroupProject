@page
@model GroupProject.Pages.Members.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Member.MemberName" class="control-label"></label>
                <input asp-for="Member.MemberName" class="form-control" />
                <span asp-validation-for="Member.MemberName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.MemberEmail" class="control-label"></label>
                <input asp-for="Member.MemberEmail" class="form-control" />
                <span asp-validation-for="Member.MemberEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.MemberDateOfBirth" class="control-label"></label>
                <input asp-for="Member.MemberDateOfBirth" class="form-control" />
                <span asp-validation-for="Member.MemberDateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.PlayerSelectionId" class="control-label"></label>
                <select asp-for="Member.PlayerSelectionId" class ="form-control" asp-items="ViewBag.PlayerSelectionId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
